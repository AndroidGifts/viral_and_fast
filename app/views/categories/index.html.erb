<%= link_to("Add new Category",{:action => 'new'}) %>

<table>
	<tr>
		<th>&nbsp;</th>
		<th>Name</th>
		<th>Description</th>
		<th>Post Count</th>
		<th>Image</th>
	</tr>
	<% @categories.each do |category| %>
	<tr>
		<td>&nbsp;</td>
		<td><%= category.name %></td>
		<td><%= category.description %></td>
		<td><%= category.post_count %></td>
		<td><%= image_tag category.image.url(:thumb) %></td>
	</tr>
	<% end %>
</table>