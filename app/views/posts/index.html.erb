<%
  slider_posts = @posts.limit(5)

  hot_left_posts = @posts.limit(2).offset(5)

  hot_right_posts = @posts.limit(5).offset(7)

  other_left_posts = @posts.odd.offset(12)

  other_right_posts = @posts.even.offset(12) 

  sidebar_posts = @posts.most_liked.limit(10)
%>

<!-- Slider Begins here! -->

      <div class="top-news row">
        <div class="new-sec new-1 col l5">
          <div class="shadow"></div>
          <%= image_tag slider_posts[0].image.url %> <!-- random image -->
          <div class="caption left-align col l8">
            <span><a href="#" class="new-type-1"><%= slider_posts[0].categories.first.name %></a></span><br>
            <a href="#"><h5 class="light grey-text text-lighten-3"><%= link_to(slider_posts[0].title, {:action => 'show', :id => slider_posts[0].id}) %></h5></a>
          </div>
        </div>
        <div class="new-sec col l3">
          <div class="new-2 col l12">
            <div class="shadow"></div>
            <%= image_tag slider_posts[1].image.url %> <!-- random image -->
            <div class="caption left-align col l9">
              <span><a href="#" class="new-type-2"><%= slider_posts[1].categories.first.name %></a></span><br>
              <a href="#"><h5 class="light grey-text text-lighten-3"><%= link_to(slider_posts[1].title, {:action => 'show', :id => slider_posts[1].id}) %></h5></a>
            </div>
          </div>
          <div class="new-3 col l12">
            <div class="shadow"></div>
            <%= image_tag slider_posts[2].image.url %> <!-- random image -->
            <div class="caption left-align col l9">
              <span><a href="#" class="new-type-3"><%= slider_posts[2].categories.first.name %></a></span><br>
              <a href="#"><h5 class="light grey-text text-lighten-3"><%= link_to(slider_posts[2].title, {:action => 'show', :id => slider_posts[2].id}) %></h5></a>
            </div>         
          </div>         
        </div>
        <div class="new-sec col l4">
          <div class="new-4 col l12">
            <div class="shadow"></div>
            <%= image_tag slider_posts[3].image.url(:large) %> <!-- random image -->
            <div class="caption left-align col l7">
              <span><a href="#" class="new-type-4"><%= slider_posts[3].categories.first.name %></a></span><br>
              <a href="#"><h5 class="light grey-text text-lighten-3"><%= link_to(slider_posts[3].title, {:action => 'show', :id => slider_posts[3].id}) %></h5></a>
            </div>         
          </div>
          <div class="new-5 col l12">
            <div class="shadow"></div>
            <%= image_tag slider_posts[4].image.url %> <!-- random image -->
            <div class="caption left-align col l7">
              <span><a href="#" class="new-type-5"><%= slider_posts[4].categories.first.name %></a></span><br>
              <a href="#"><h5 class="light grey-text text-lighten-3"><%= link_to(slider_posts[4].title, {:action => 'show', :id => slider_posts[4].id}) %></h5></a>
            </div>         
          </div>        
        </div>
      </div>

      <!-- Slider End -->

      <div class="container">
        <div class="row col s12 m7">
          <div class="row col m9 main-content">
            <!--left-section 1 -->

            <div class="row col m7 left-section">
              <h5 class="h-sec"><i class="small material-icons">play_arrow</i>&nbsp;&nbsp;Hot Articles</h5>
              
              <!-- big-card -->
              
              <% hot_left_posts.each do |post| %>

              <div class="card medium">
                <div class="card-image">
                  <%= image_tag post.image.url %>
                </div>
                  
                <div class="card-content">
                  <span class="card-section"><a href="#" class="type">Fun</a></span><br>
                  <a class="like-icon" href="#"><i class="fa fa-heart-o fa-lg"></i><br><span class="no-of-likes"><%= post.likes_count %></span></a>
                  <a href="#"><h5 class="card-title"><%= link_to(post.title, {:action => 'show', :id => post.id}) %></h5></a>
                  <a href="#"><h6 class="author"><%= post.editor.first_name + " " + post.editor.last_name %> </h6></a>
                </div>

                <div class="card-action">
                  <a class="views" href="#"><i class="fa fa-eye"></i>3122 views</a>
                  <a class="comments" href="#"><i class="fa fa-comment"></i><%= post.comment_count %> Comments</a>
                  <a href="#" class="read-more">Read More!<i class="fa fa-angle-right"></i></a>
                </div>
              </div>
              <!-- end of big-card -->
              <% end %>

              <!-- videos scroll -->

              <div class="videos">
                <h5 class="video-scroll-title">VIDEOS TITLE</h5>
                <ul class="video-scroll">
                  
                  <% hot_right_posts.each do |post| %>
                  <li>
                    <div class="row valign-wrapper">
                      <div class="col s3">
                        <%= image_tag post.image.url, :class => "responsive-img" %>
                        </div>
                      <div class="col s9">
                        <span class="black-text">
                          <a href="#"><h5 class="card-title"><%= link_to(post.title, {:action => 'show', :id => post.id}) %></h5></a>
                          <a href="#"><h6 class="author"><%= post.editor.first_name + " " + post.editor.last_name %></h6></a>
                          <a class="views" href="#"><i class="fa fa-eye"></i>3122 views</a>
                          <a class="comments" href="#"><i class="fa fa-comment"></i><%= post.comment_count %> Comments</a>
                          <a class="video-like-icon" href="#"><i class="fa fa-heart-o fa-lg"></i></a>
                        </span>
                      </div>
                    </div>
                  </li><hr>
                  <% end %>
                </ul>
              </div>

              <!-- end of video-scroll -->

              <div class="row">
                <div class="col s7">
                
                  <% slider_posts.each do |post| %>

                  <div class="card small">
                    <div class="card-image">
                      <%= image_tag post.image.url %>
                    </div>
                      
                    <div class="card-content">
                      <a class="mini-like-icon" href="#"><i class="fa fa-heart-o"></i><br><span class="no-of-likes"><%= post.likes_count %></span></a>
                      <a href="#"><h5 class="card-title"><%= link_to(post.title, {:action => 'show', :id => post.id}) %></h5></a>
                      <a href="#"><h6 class="author"><%= post.editor.first_name + " " + post.editor.last_name %></h6></a>
                    </div>

                    <div class="card-action">
                      <a class="mini-views" href="#"><i class="fa fa-eye"></i>3122 views</a>
                      <a class="mini-comments" href="#"><i class="fa fa-comment"></i><%= post.comment_count %> Comments</a>
                    </div>
                  </div>

                  <% end %>
                </div>

                <div class="col s5">
                  <% hot_right_posts.each do |post| %>
                  <div class="card small">
                    <div class="card-image">
                      <%= image_tag post.image.url %>
                    </div>
                      
                    <div class="card-content">
                      <a class="mini-like-icon" href="#"><i class="fa fa-heart-o"></i><br><span class="no-of-likes"><%= post.likes_count %></span></a>
                      <a href="#"><h5 class="card-title"><%= link_to(post.title, {:action => 'show', :id => post.id}) %></h5></a>
                      <a href="#"><h6 class="author"><%= post.editor.first_name + " " + post.editor.last_name %></h6></a>
                    </div>

                    <div class="card-action">
                      <a class="mini-views" href="#"><i class="fa fa-eye"></i>3122 views</a>
                      <a class="mini-comments" href="#"><i class="fa fa-comment"></i><%= post.comment_count %> Comments</a>
                    </div>
                  </div>
                  <% end %>
                </div>

              </div>  

            </div>

            <!--end of left-section 1 -->

            <!-- mid-section 1 -->

            <div class="row col m5 mid-section-1">

              <% hot_right_posts.each do |post| %>

              <div class="row col m12">
                <div class="card small tiny">
                  <div class="card-image">
                    <%= image_tag post.image.url %>
                  </div>
                        
                  <div class="card-content">
                    <a class="mini-like-icon" href="#"><i class="fa fa-heart-o"></i><br><span class="no-of-likes"><%= post.likes_count %></span></a>
                    <a href="#"><h5 class="card-title"><%= link_to(post.title, {:action => 'show', :id => post.id}) %></h5></a>
                    <a class="mini-views" href="#"><i class="fa fa-eye"></i>3122 views</a>
                    <a class="mini-comments" href="#"><i class="fa fa-comment"></i><%= post.comment_count %> Comments</a>
                  </div>
                </div>
              </div>

              <% end %>

              <div class="row">

                <% 2.times do %>
                <div class="col m6">
                  
                  <% hot_right_posts.each do |post| %>

                  <div class="card small">
                    <div class="card-image">
                      <%= image_tag post.image.url(:medium) %>
                    </div>
                      
                    <div class="card-content">
                      <a class="mini-like-icon" href="#"><i class="fa fa-heart-o"></i><br><span class="no-of-likes"><%= post.likes_count %></span></a>
                      <a href="#"><h5 class="card-title"><%= link_to(post.title, {:action => 'show', :id => post.id}) %></h5></a>
                      <a href="#"><h6 class="author"><%= post.editor.first_name + " " + post.editor.last_name %></h6></a>
                    </div>

                    <div class="card-action">
                      <a class="mini-views" href="#"><i class="fa fa-eye"></i>3122 views</a>
                      <a class="mini-comments" href="#"><i class="fa fa-comment"></i><%= post.comment_count %> Comments</a>
                    </div>
                  </div>

                  <% end %>

                </div>
                <% end %>
              </div>  

            </div>
          </div>

          <!-- end of main-content -->

          <!-- Sidebar section -->
           
          <div class="col m3 side-content">

            <div class="row side-ads">

            </div>

            <div class="row">
                <ul class="social-list">
                  <li class="facebook row col s12">
                    <div class="col s12">
                      <div class="col s3">
                        <a href="#"><i class="fa fa-facebook fa-2x"></i></a>
                      </div>
                      <a href="#"><p class="col s9">Viral and fast fun</p></a>
                    </div>
                  </li>
                  <li class="linkedIn row  col s12">
                    <div class="col s12">
                      <div class="col s3">
                        <a href="#"><i class="fa fa-linkedin fa-2x"></i></a>
                      </div>
                      <a href="#"><p class="col s9">Viral and fast fun</p></a>
                    </div>
                  </li>
                  <li class="twitter row  col s12">
                    <div class="col s12">
                      <div class="col s3">
                        <a href="#"><i class="fa fa-twitter fa-2x"></i></a>
                      </div>
                      <a href="#"><p class="col s9">Viral and fast fun</p></a>
                    </div>
                  </li>            
                  <li class="google row  col s12">
                    <div class="col s12">
                      <div class="col s3">
                        <a href="#"><i class="fa fa-google-plus fa-2x"></i></a>
                      </div>
                      <a href="#"><p class="col s9" class="col s9">Viral and fast fun</p></a>
                    </div>
                  </li>
                  <li class="instgram row col s12">
                    <div class="col s12">
                      <div class="col s3">
                        <a href="#"><i class="fa fa-instagram fa-2x"></i></a>
                      </div>
                      <a href="#"><p class="col s9">Viral and fast fun</p></a>
                    </div>
                  </li>
                </ul>
              </div>

              <!-- end of social-feeds -->

            <div class="row">

              <h5 class="h-sec"><i class="small material-icons">play_arrow</i>&nbsp;&nbsp;Hotest Articles</h5>
              
              <% sidebar_posts.each do |post| %>

              <div class="card-panel recent grey lighten-5 z-depth-1">
                <div class="row valign-wrapper">
                  <div class="col s4">
                    <%= image_tag post.image.url, :class => "responsive-img" %>
                    </div>
                  <div class="col s8">
                    <span class="black-text">
                      <span class="card-section"><a href="#" class="type"><%= post.categories.first.name %></a></span><br>
                      <a href="#"><h5 class="card-title"><%= link_to(post.title, {:action => 'show', :id => post.id}) %></h5></a>
                      <a href="#"><h6 class="author"><%= post.editor.first_name + " " + post.editor.last_name %></h6></a>
                    </span>
                  </div>
                </div>
              </div>

              <% end %>

            </div>

            <div class="row side-ads">

            </div>

          </div>

          <!-- end of right-section -->

        </div>