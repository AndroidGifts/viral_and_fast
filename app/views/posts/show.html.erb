<% sidebar_posts = Post.all.most_liked.limit(5) %>

<div class="container">
        <div class="row col s12">
          <div class="row col m12 main-content">
            <!--left-section 1 -->

            <div class="row col l12 article-header">
              <h5 class="article-title"><%= @single_post.title %></h5>
              <a class="article-views" href="#"><i class="fa fa-eye"></i>3122 views</a>
              <a class="article-comments" href="#"><i class="fa fa-comment"></i><%= @single_post.comments.count %> Comments</a>
            </div>

            <div class="row col m9 left-section">

              <div class="row col m12">  

                <div class="article-image">
                  <%= image_tag @single_post.image.url %>
                </div>

                <div class="fr-view">
                  <%= simple_format(@single_post.content) %>
                </div>
                    
                <!-- <div class="article-content">
                  <div class="article-text fr-view">
                    <%= @single_post.content %>
                    <a class="waves-effect waves-light btn share-btn"><i class="fa fa-share-alt fa-2x"></i>SHARE</a>
                  </div>
                </div> -->
            
              </div>

                <div class="row col m12 discussion">

                  <h6>DISCUSSION</h6>

                  <% @single_post.comments.each do |comment| %>

                  <div class="row disc">
                    
                    <div class="col s11">
                      <h6 class="name"><%= comment.editor.first_name + " " + comment.editor.first_name %></h6>
                      <p class="black-text">
                      <%= comment.content %>
                      </p>
                    </div>
                  </div>
                  <% end %>
                </div>

                <%= form_for(:comment, :url => {:controller => 'comments', :action => 'create', :post_id => @single_post.id}) do |f| %>
  
                  <%= f.text_field(:content) %>

                  <%= submit_tag("Comment", :class => 'btn') %>

                <% end %>

            </div>

            <!--end of left-section 1 -->

            <!-- mid-section 1 -->

            <div class="row col m3 mid-section side">

              <div class="row">

              <h5 class="h-sec"><i class="small material-icons">play_arrow</i>&nbsp;&nbsp;Hotest Articles</h5>
              
              <% sidebar_posts.each do |post| %>

              <div class="card-panel recent grey lighten-5 z-depth-1">
                <div class="row valign-wrapper">
                  <div class="col s4">
                    <%= image_tag post.image.url, :class => "responsive-img" %>
                    </div>
                  <div class="col s8">
                    <span class="black-text">
                      <span class="card-section"><a href="#" class="type"><%= post.categories.first.name %></a></span><br>
                      <a href="#"><h5 class="card-title"><%= link_to(post.title, {:action => 'show', :id => post.id}) %></h5></a>
                      <a href="#"><h6 class="author"><%= post.editor.first_name + " " + post.editor.last_name %></h6></a>
                    </span>
                  </div>
                </div>
              </div>

              <% end %>

            </div>

            </div>

            <!-- end of mid-section 1 -->

          </div>

          <!-- end of main-content -->

        </div>